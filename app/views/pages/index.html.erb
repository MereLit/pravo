     <div class="container">
        <div class="row">
            <div class="hidden-xs col-sm-4">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">Меню</h4>
                        </div>
                        <ul class="nav nav-pills nav-stacked">
                            <li><a href="#">Новини</a></li>
                            <li><a href="#">Інфо-центр</a></li>
                            <li><a href="#">Лекції</a></li>
                            <li><a href="http://www.uzhnu.edu.ua/">Сайт університету</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-8">


	<% @article.each do |article| %>
   		<div id="ed"><% if current_user != nil and current_user.id == article.user_id %>
			<%= link_to "Edit",  edit_article_path(article.id) %> or
			<%= link_to "Delete", article_path(article.id), data: {confirm: 'Rili deleted your post?'}, method: :delete %>
		<%end%>
		</div>	

			<center><h4><%= link_to article.title, article_path(article.id) %></h4></center>
			<div class="text">
			<p><i><%= sanitize article.body %></i></p>
			</div>
			<div class="time">
			<span class="glyphicon glyphicon-time"></span> 
			<%= article.created_at %>
			</div>
		<div class="ram">
			<center><%= link_to "Read more", article_path(article.id), class: "btn btn-default" %></center>	
		</div>
		<hr>
	<%end%>
	</div>
